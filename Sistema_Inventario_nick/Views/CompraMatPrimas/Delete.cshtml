@model SisInventarios.Model.CompraMatPrima

@{
    ViewData["Title"] = "Eliminar Compra de Materia Prima";
}

<h2>@ViewData["Title"]</h2>
<h3>¿Está seguro de que desea eliminar esta compra?</h3>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalles de la Compra</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Proveedor</dt>
            <dd class="col-sm-8">@Model.Proveedor?.nombre ?? "Sin asignar"</dd>

            <dt class="col-sm-4">Materia Prima</dt>
            <dd class="col-sm-8">@Model.MateriaPrima?.nombre ?? "Sin asignar"</dd>

            <dt class="col-sm-4">Valor Unitario</dt>
            <dd class="col-sm-8">@Model.valorUnitario ?? 0</dd>

            <dt class="col-sm-4">Fecha de Compra</dt>
            <dd class="col-sm-8">@Model.fechaCompra?.ToString("dd/MM/yyyy") ?? "Sin asignar"</dd>

            <dt class="col-sm-4">Cantidad</dt>
            <dd class="col-sm-8">@Model.cantidadCompra ?? 0</dd>

            <dt class="col-sm-4">Total Compra</dt>
            <dd class="col-sm-8">@Model.totalCompra ?? 0</dd>
        </dl>

        <!-- Formulario de confirmación de eliminación -->
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
